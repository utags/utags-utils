{
  "name": "utags-utils",
  "version": "0.3.0",
  "description": "Common utility functions for utags and utags-bookmarks",
  "type": "module",
  "main": "./lib/index.ts",
  "exports": {
    ".": "./lib/index.ts"
  },
  "scripts": {
    "p": "prettier --write .",
    "lint": "prettier --write . && xo --fix && tsc --noemit",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch"
  },
  "author": "Pipecraft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/utags/utags-utils/issues"
  },
  "homepage": "https://github.com/utags/utags-utils#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/chrome": "^0.0.329",
    "@types/jest": "^30.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "xo": "^0.60.0"
  },
  "files": [
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "envs": [
      "browser",
      "webextensions"
    ],
    "rules": {
      "capitalized-comments": 0
    },
    "overrides": [
      {
        "files": [
          "jest.config.mjs"
        ],
        "rules": {
          "import/no-anonymous-default-export": 0
        }
      },
      {
        "files": [
          "jest.setup.ts"
        ],
        "rules": {
          "import/no-unassigned-import": 0
        }
      }
    ]
  }
}
